<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners
                android:bottomRightRadius="2dip"
                android:topRightRadius="2dip"/>
            <gradient
                android:startColor="@color/background_color"
                android:centerColor="@color/background_color"
                android:centerY="0.75"
                android:endColor="@color/background_color"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners
                    android:bottomRightRadius="2dip"
                    android:topRightRadius="2dip"/>
                <gradient
                    android:startColor="@color/progressbar_progress"
                    android:centerColor="@color/progressbar_progress"
                    android:centerY="0.75"
                    android:endColor="@color/progressbar_progress"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:bottomRightRadius="2dip"
                    android:topRightRadius="2dip"/>

                <gradient
                    android:startColor="@color/progressbar_progress"
                    android:endColor="@color/progressbar_progress"
                    />
            </shape>
        </clip>
    </item>
</layer-list>