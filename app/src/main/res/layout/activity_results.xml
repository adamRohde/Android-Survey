<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:id="@+id/scrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resultsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/survey_statement_top_margin"
                android:layout_gravity="center"
                android:textSize="@dimen/intro_text_size"
                android:text="@string/results" />

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/radarChart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/table_left_margin"
                android:layout_marginLeft="@dimen/table_left_margin"
                android:layout_marginTop="@dimen/table_vertical_margin"
                android:layout_marginBottom="@dimen/table_vertical_margin">

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>